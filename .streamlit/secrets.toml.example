# BharatVerse Secrets Configuration Template
# Copy this file to .streamlit/secrets.toml and fill in your actual values
# NEVER commit the actual secrets.toml file to version control

# Database Configuration
[database]
host = "your-database-host"
port = 5432
database = "bharatverse"
user = "your-database-user"
password = "your-database-password"

# Redis Configuration
[redis]
host = "your-redis-host"
port = 6379
password = "your-redis-password"
db = 0

# MinIO/S3 Storage Configuration
[storage]
endpoint = "your-minio-endpoint"
access_key = "your-access-key"
secret_key = "your-secret-key"
bucket_name = "bharatverse"
secure = true

# GitLab OAuth Configuration
[gitlab]
client_id = "your-gitlab-client-id"
client_secret = "your-gitlab-client-secret"
redirect_uri = "your-app-url/oauth/callback"
gitlab_url = "https://gitlab.com"

# API Keys (Optional)
[api_keys]
openai_key = "your-openai-api-key"
anthropic_key = "your-anthropic-api-key"
huggingface_token = "your-huggingface-token"

# JWT Configuration
[security]
jwt_secret = "your-jwt-secret-key"
jwt_algorithm = "HS256"
jwt_expiry = 3600

# Application Settings
[app]
debug = false
environment = "production"
base_url = "https://your-app-url.streamlit.app"
