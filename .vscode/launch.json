{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Streamlit App",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/venv/bin/streamlit",
            "args": [
                "run",
                "Home.py",
                "--server.port=8501",
                "--server.address=localhost"
            ],
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}",
            "env": {
                "PYTHONPATH": "${workspaceFolder}"
