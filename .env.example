# BharatVerse Environment Configuration
# Copy this file to .env and update with your values

# Application Settings
APP_NAME=BharatVerse
APP_ENV=development
DEBUG=True
SECRET_KEY=your-secret-key-here

# Database Configuration
DATABASE_URL=sqlite:///data/bharatverse.db
# For PostgreSQL:
# DATABASE_URL=postgresql://user:password@localhost:5432/bharatverse

# Redis Configuration (optional)
REDIS_URL=redis://localhost:6379/0

# MinIO Configuration (optional)
MINIO_ENDPOINT=localhost:9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin
MINIO_SECURE=False
MINIO_BUCKET=bharatverse

# API Configuration
API_URL=http://localhost:8000
API_KEY=your-api-key-here

# GitLab OAuth (optional)
GITLAB_APP_ID=your-gitlab-app-id
GITLAB_APP_SECRET=your-gitlab-app-secret
GITLAB_REDIRECT_URI=http://localhost:8501

# AI Model Settings
ENABLE_AI_FEATURES=True
MODEL_CACHE_DIR=./models

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/bharatverse.log

# Feature Flags
ENABLE_COMMUNITY_FEATURES=True
ENABLE_GITLAB_INTEGRATION=False
ENABLE_ANALYTICS=True
