# üåç BharatVerse Environment Configuration (.env)
# =====================================================
# Copy this file to .env and update with your actual values
# This is an alternative to using Streamlit secrets.toml

# ü§ó HuggingFace AI API
HUGGINGFACE_TOKEN=hf_your_token_here

# üêò Supabase Database
SUPABASE_URL=https://your-project-id.supabase.co
SUPABASE_ANON_KEY=eyJhbGciOiJIUzI1NiIs...your-anon-key
SUPABASE_SERVICE_ROLE_KEY=eyJhbGciOiJIUzI1NiIs...your-service-role-key
DATABASE_URL=postgresql://postgres:your-password@db.your-project-id.supabase.co:5432/postgres

# ‚ö° Upstash Redis Cache
REDIS_URL=https://your-db-id.upstash.io
REDIS_TOKEN=your-upstash-rest-token

# ü™£ MinIO Object Storage (Render Hosted)
MINIO_ENDPOINT_URL=https://your-minio-app.onrender.com
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin
MINIO_BUCKET=bharatverse-bucket
MINIO_REGION=us-east-1

# üîê Authentication (Optional)
ADMIN_PASSWORD=your-secure-admin-password
JWT_SECRET=your-jwt-secret-key

# üì± Application Settings
APP_TITLE="BharatVerse - Cultural Heritage Platform"
DEBUG_MODE=false
MAX_FILE_SIZE=50
DEFAULT_LANGUAGE=en
CACHE_TTL=3600

# ‚ö° Performance Optimization Settings
ENABLE_CACHING=true
CACHE_TTL_HOURS=24
MEMORY_THRESHOLD_MB=500
CLEANUP_INTERVAL_SECONDS=300
MAX_CONCURRENT_REQUESTS=5

# üöÄ Rate Limiting & Batching
API_CALLS_PER_MINUTE=60
BATCH_SIZE=10
PARALLEL_PROCESSING_WORKERS=4

# üìä Monitoring & Analytics
ENABLE_PERFORMANCE_MONITORING=true
ENABLE_MEMORY_TRACKING=true
LOG_LEVEL=INFO
ANALYTICS_BATCH_SIZE=10

# üîÑ Async Operations
ASYNC_TIMEOUT_SECONDS=30
CONNECTION_POOL_SIZE=10
WARMUP_SERVICES_ON_START=true

# Legacy/Alternative configurations
AI_MODE=free_tier
USE_LIGHTWEIGHT_MODELS=true
DEPLOYMENT_MODE=free
