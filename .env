# TeluguVerse Environment Configuration

# PostgreSQL Configuration
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=teluguverse
POSTGRES_USER=admin
POSTGRES_PASSWORD=secure_password

########################################
# MinIO Configuration (S3-compatible object storage)
# Access the MinIO dashboard at http://localhost:9001
# Default credentials: minioadmin / minioadmin
########################################
MINIO_HOST=localhost:9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin
MINIO_SECURE=False
# Name of the bucket to use for uploads
MINIO_BUCKET=uploads

# Redis Configuration (Caching)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=

# API Keys for AI Models (Add your keys here)
OPENAI_API_KEY=your_openai_api_key_here
HUGGINGFACE_TOKEN=your_huggingface_token_here

# Application Settings
APP_SECRET_KEY=your_secret_key_here_change_in_production
DEBUG=True
LOG_LEVEL=INFO

# File Upload Settings
MAX_UPLOAD_SIZE_MB=100
ALLOWED_AUDIO_FORMATS=mp3,wav,ogg,m4a,flac
ALLOWED_VIDEO_FORMATS=mp4,avi,mov,mkv,webm
ALLOWED_IMAGE_FORMATS=jpg,jpeg,png,gif,webp,bmp

# AI Model Settings
WHISPER_MODEL=base  # tiny, base, small, medium, large
LANGUAGE_MODEL=bert-base-multilingual-cased
IMAGE_CAPTIONING_MODEL=Salesforce/blip-image-captioning-base

# Database URLs (Alternative format)
DATABASE_URL=postgresql://admin:secure_password@localhost:5432/teluguverse
REDIS_URL=redis://localhost:6379/0
MINIO_URL=http://localhost:9000

# CORS Settings
CORS_ORIGINS=http://localhost:3000,http://localhost:8501,http://localhost:8000

# Session Settings
SESSION_LIFETIME_HOURS=24
SESSION_SECRET_KEY=change_this_in_production_to_random_string

# Feature Flags
ENABLE_AUDIO_RECORDING=True
ENABLE_AI_TRANSCRIPTION=True
ENABLE_AI_TRANSLATION=True
ENABLE_IMAGE_CAPTIONING=True
ENABLE_CACHING=True

# Storage Paths (for local development)
LOCAL_STORAGE_PATH=./data/uploads
TEMP_STORAGE_PATH=./data/temp

# Monitoring
ENABLE_METRICS=True
METRICS_PORT=9090
